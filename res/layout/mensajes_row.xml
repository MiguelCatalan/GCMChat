<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="55dp">

    <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:text="enviado"
            android:gravity="center_vertical" android:textColor="@android:color/secondary_text_dark"
            android:textSize="14dp"/>

    <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nombre de prueba"
            android:gravity="center_vertical" android:textColor="@android:color/primary_text_dark"
            android:textSize="18dp"/>


</LinearLayout>